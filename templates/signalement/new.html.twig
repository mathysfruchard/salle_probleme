{% extends 'base.html.twig' %}

{% block title %}Signalez un problème{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Signalez un problème</h1>

        <div class="row justify-content-center">
            <div class="col-md-6">
                {{ form_start(form) }}

                <div class="form-group mb-3">
                    {{ form_label(form.user, 'Utilisateur') }}
                    {{ form_widget(form.user, { 'attr': {'class': 'form-control'} }) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(form.salles, 'Salles') }}
                    {{ form_widget(form.salles, { 'attr': {'class': 'form-control'} }) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(form.materiel, 'Matériel') }}
                    {{ form_widget(form.materiel, { 'attr': {'class': 'form-control'} }) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(form.description, 'Description') }}
                    {{ form_widget(form.description, { 'attr': {'class': 'form-control', 'rows': '5'} }) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(form.date_signalement, 'Date signalement') }}
                    {{ form_widget(form.date_signalement, { 'attr': {'class': 'form-control'} }) }}
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary btn-lg">Envoyer</button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
