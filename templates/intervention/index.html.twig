{% extends 'base.html.twig' %}

{% block title %}Intervention index{% endblock %}

{% block body %}
    <center>


        <h1>Liste des interventions</h1>

        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <td>Id</td>
                    
                    <td>Date d'intervention</td>
                    <td>Commentaire</td>
                    <td>Actions</td>
                </tr>
            </thead>
            <tbody>
            {% for intervention in interventions %}
                <tr>
                    <td>{{ intervention.id }}</td>
                    
                    <td>{{ intervention.dateIntervention ? intervention.dateIntervention|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ intervention.commentaire }}</td>
                    <td>
                        <a class="btn btn-primary" href="{{ path('app_intervention_show', {'id': intervention.id}) }}">Voir</a>
                        <a class="btn btn-warning" href="{{ path('app_intervention_edit', {'id': intervention.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucune intervention trouvée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <!-- Ajouter la classe mt-4 pour un espacement supplémentaire -->
        <div class="mt-4">
            <a class="btn btn-success" href="{{ path('app_intervention_new') }}">Créer une nouvelle intervention</a>
        </div>

    </center>

    <div class="col py-3">
        {% block main_content %}{% endblock %}
    </div>

    {% block javascripts %}
        {% block importmap %}
            {{ importmap('app') }}
        {% endblock %}
    {% endblock %}
{% endblock %}
