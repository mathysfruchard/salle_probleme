{% extends 'base.html.twig' %}

{% block title %}Créer une nouvelle intervention{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Créer une nouvelle intervention</h1>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <!-- Formulaire de création -->
                    <div class="card-body">
                        {{ form_start(form) }}

                        <div class="form-group mb-3">
                            {{ form_label(form.user, 'Utilisateur') }}
                            {{ form_widget(form.user, { 'attr': {'class': 'form-control'} }) }}
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(form.date_intervention, 'Date') }}
                            {{ form_widget(form.date_intervention, { 'attr': {'class': 'form-control'} }) }}
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(form.signalement, 'Signalement') }}
                            {{ form_widget(form.signalement, { 'attr': {'class': 'form-control'} }) }}
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(form.commentaire, 'Description') }}
                            {{ form_widget(form.commentaire, { 'attr': {'class': 'form-control', 'rows': '5'} }) }}
                        </div>

                        <!-- Bouton créer -->
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-secondary">Créer</button>
                        </div>

                        {{ form_end(form) }}
                    </div>
            </div>
        </div>
    </div>

    <div class="col py-3">
        {% block main_content %}{% endblock %}
    </div>

    {% block javascripts %}
        {% block importmap %}
            {{ importmap('app') }}
        {% endblock %}
    {% endblock %}
{% endblock %}
