{% extends 'base.html.twig' %}

{% block title %}Détails de l'utilisateur{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center">Détails de l'utilisateur</h1>

        <table class="table table-dark table-striped mt-3">
            <thead>
                <tr>
                    <th>Champ</th>
                    <th>Valeur</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Statut</th>
                    <td>{{ user.statut }}</td>
                </tr>
                <tr>
                    <th>Roles</th>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                </tr>
                <tr>
                    <th>Mot de passe</th>
                    <td>{{ user.password }}</td>
                </tr>
            </tbody>
        </table>

        <div class="d-flex justify-content-between mt-4">
            <a class="btn btn-primary" href="{{ path('app_user_index') }}">Retour à la liste</a>
            <a class="btn btn-warning" href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>
        </div>

        <div class="mt-4">
            {{ include('user/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}